<% include ../partial/atas %>
 <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Tambah Perangkat IoT Baru</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form method="post" action="/perubahan/<%= dataiot._id %>">
                <div class="box-body">
                <div class="form-group">
                  <label>ID</label>
                  <input type="text" class="form-control" disabled="" placeholder="<%= dataiot.id %>">
                </div>
                <div class="form-group">
                  <label>Nama Site</label>
                  <input type="text" class="form-control" id="site" name="site" value="<%= dataiot.site %>">
                </div>
                <div class="form-group">
                  <label>Alamat</label>
                  <input type="text" class="form-control" id="alamat" name="alamat" value="<%= dataiot.alamat %>">
                </div>
               
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          
<div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data Perangkat IoT</h3>
            </div>
            <!-- /.box-header -->
            <div class="box">
              <table class="table table-bordered table-hover" >
               <tbody>
                <tr>
                  <th style="text-align: center;">NO</th>
                  <th style="text-align: center;">ID</th>
                  <th style="text-align: center;">NAMA SITE</th>
                  <th style="text-align: center;">ALAMAT</th>
                  <th style="text-align: center;">ACTION</th>

                </tr>
                 <% for (var i=0;i<datafull.length;i++){ %>
                <tr>
                  <td style="text-align: center;"><%= i+1 %></td>
                  <td style="text-align: center;"><%= datafull[i].id %></td>
                  <td style="text-align: center;"><%= datafull[i].site %></td>
                  <td style="text-align: center;"><%= datafull[i].alamat %></td>
                  <td style="text-align: center;"><a href="/hapus/<%=datafull[i]._id%>" class="btn btn-danger">Delete</a>&nbsp;&nbsp;&nbsp;<a href="/edit/<%=datafull[i]._id%>" class="btn btn-warning">Edit</a>
                  </td>
                  
                </tr>
                </tbody>
                <% } %>
</table>
</div>
</div>
</div>
</div>
</div>
</form>
</div>

<% include ../partial/bawah %>
