<% include ../partial/atas %>
 <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Tambah Perangkat IoT Baru</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form method="post" action="/tambahIot">
                <div class="box-body">
                <div class="form-group">
                  <label>ID</label>
                  <input type="text" class="form-control" disabled="" placeholder=<%= idbaru %>>
                </div>
                <div class="form-group">
                  <label>Nama Site</label>
                  <input type="text" class="form-control" id="site" name="site" placeholder="NAMA SITE">
                </div>
                <div class="form-group">
                  <label>Alamat</label>
                  <input type="text" class="form-control" id="alamat" name="alamat" placeholder="ALAMAT">
                </div>
               
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Register</button>
              </div>
            </form>
            </div>
          
<div class="box box-primary">
<div class="box-header with-border">
<h3 class="box-title">Daftar IoT</h3>
      <table class="table table-bordered">
      <thead>
        <tr>
           <th>NO</th>
           <th>ID</th>
           <th>ALAMAT SITE</th>
           <th>ACTION</th>            
        </tr>
      
      </thead>
       <tbody><% for (var i=0;i < dataiot.length; i++){   %>
        <tr>
        <td><%= i+1 %></td>
        <td><%= dataiot[i].id %></td>
        <td><%= dataiot[i].alamat %></td>
        <td>
          <a href="/hapus/<%=dataiot[i]._id%>" class="btn btn-danger">Delete</a>
          <a href="/<%=dataiot[i]._id%>" class="btn btn-warning">Edit</a>
        </td>
        
          <% } %>
        </tr>
      </tbody>
      </table>
</div>
</div>
</div>
</div>
</div>
</div>


